<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_marginBottom="3dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cvsubs"
        android:layout_margin="@dimen/cardview_default_elevation"
        android:elevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/andro"
                android:layout_width="64dp"
                android:layout_height="65dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_account_box_black_24dp" />


            <TextView
                android:id="@+id/sub_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/andro"
                android:text="subscription_date"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/validity_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sub_name"
                android:layout_toRightOf="@+id/andro"
                android:text="validity"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/trans_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/validity_status"
                android:layout_toRightOf="@+id/andro"
                android:text="Transaction Code"
                android:textSize="18dp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

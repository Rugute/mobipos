<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.mobipos.app.Dashboard.ReportFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/gradient_color">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Reports"
        android:layout_marginBottom="10dp"
        android:textColor="#fffbfb"
        android:background="#3d843a"
        android:layout_gravity="center"
        android:textSize="30sp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <EditText

                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button_from"
                android:layout_marginTop="11dp"
                android:gravity="end"
                android:textAlignment="textEnd"
                android:textColor="#fff"
                android:editable="false"/>

            <EditText
                android:id="@+id/fro1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textAlignment="textEnd"
                android:textColor="#fff"
                android:editable="false"/>

            <Button
                android:id="@+id/button_from"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:text="From" />

            <Button
                android:id="@+id/button_to"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/editText"
                android:text="To" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/choose"
            android:text="Choose Branch"
            android:background="@drawable/edit_text"
            android:layout_gravity="center"
            android:textSize="23sp"
            android:textColor="#fffbfb"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Report Format"
            android:textColor="#fffbfb"
            android:textSize="18sp"
            android:layout_marginBottom="13dp"/>
        <RadioGroup
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/pdf_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   PDF"
                android:textColor="#fff"
                android:textSize="20dp"
                android:paddingLeft="5dp"


                />
            <RadioButton
                android:id="@+id/csv_select"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="   CSV"
                android:textColor="#fff"
                android:paddingLeft="5dp" />

        </RadioGroup>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp">

            <Button
                android:id="@+id/gen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Generate"
                android:textSize="18dp" />

        </RelativeLayout>




    </LinearLayout>

</RelativeLayout>
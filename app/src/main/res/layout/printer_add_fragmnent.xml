<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_color">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#faf8f8"
            android:text="ADD PRINTER"
            android:textColor="#2a3d1a" />

        <EditText
            android:id="@+id/new_printer_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:background="@drawable/edit_text"
            android:gravity="left|center"
            android:hint="Printer Name"
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor='#fff'
            android:textColorHint="#fff" />

        <EditText
            android:id="@+id/new_printer_mac"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:background='@drawable/edit_text'
            android:gravity="left|center"
            android:hint="Mac Address eg. 98:5D:10:D4:86"
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor='#fff'
            android:textColorHint='#fff' />

        <Button
            android:id="@+id/branch_picker"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:background='@drawable/edit_text'
            android:gravity="left|center"
            android:hint="Branch"
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor='#fff'
            android:textColorHint='#fff' />


        <Button
            android:id="@+id/add_printer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:gravity="center"
            android:text=" ADD "
            android:textColor="#1c2615"
            android:paddingBottom="20dp"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Instructions for adding a Printer : "
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="#000"/>

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#2d6625"
                    android:text="On the Thermal Bluetooth Printer check for a test page printing button.
Then on the test page printed look for Mac Address eg.'98:5D:10:D4:86'
You will be good to go!" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>



</android.support.constraint.ConstraintLayout>
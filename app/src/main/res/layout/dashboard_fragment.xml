<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobipos.app.Dashboard.DashboardFragment">

    <ImageView
        android:id="@+id/cashier_dashboard_imageview"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:src="@drawable/mobi"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cashier_dashboard_imageview"
        android:layout_centerHorizontal="true"
        android:text="Cashier dashboard"
        android:textSize="30sp"/>

</RelativeLayout>